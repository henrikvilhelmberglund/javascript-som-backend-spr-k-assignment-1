<%- include("header") %>
<form action="/members/" method="post">
  <% sortAlternatives.forEach(alternative => { %>

  <button class="hover:bg-blue-300 bg-blue-400 p-2 rounded mx-2" name="<%= alternative.toLowerCase(); %>"><%= alternative %></button>
  <% }); %>
</form>
<% if (members.length) { %>
<% members.forEach(member => {%>
<div class="flex gap-10">
  <a class="hover:outline-black hover:outline hover:outline-1 flex flex-col justify-center items-center text-2xl w-64 h-16 shadow-xl rounded-lg" href="/member/<%= member._id %>">
    <%= member.name %>
  </a>
  <form action="/members/delete/<%= member._id %>" method="post">
    <button class="hover:bg-red-400 bg-red-500 p-4 rounded text-2xl">❌</button>
  </form>
</div>
<% }); %>
<% } else { %>
<h2 class="text-3xl text-red-600">The members list is empty.</h2>
<% } %>
<%- include("footer") %>